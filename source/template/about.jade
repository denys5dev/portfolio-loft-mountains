include common/_mixins
doctype html
html
	include common/_head
	body
		include common/_preloader

		<!--[if lt IE 7]>
		<p class="browsehappy">Вы используете <strong>устаревший</strong> браузер. Пожалуйста <a href="http://browsehappy.com/">обновите его</a></p>
		<![endif]-->
		include common/_gmap
		include common/_sprites
		

		+parallax("vertical")
		+main-menu(3)

		header.header.table-box.fullheight.fullheight_mih
			.table-box__top
				+header-top
			.table-box__middle
				.vertical-aligned
					.site-author
						+avatar("iam.jpg", "Frontend developer", "Denys Arkhipenko")
						p.site-author__name Denys Arkhipenko
						p.site-author__description Frontend developer

					svg.header__svg-bg
						use(xlink:href="#icon-portfolio_header")
					button.go-down.fa.fa-chevron-down(data-link=".about-me")

					svg(preserveAspectRatio="none" viewBox="0 0 1000 400").header__svg-corner.header__svg-corner_left
						use(xlink:href="#icon-about_bg_left")
					svg(preserveAspectRatio="none" viewBox="0 0 1000 400").header__svg-corner.header__svg-corner_right
						use(xlink:href="#icon-about_bg_right")



		section.about-me
			.about-me__stretcher.about-me__stretcher_dark
				.about-me__stretcher.about-me__stretcher_light
					.about-me__bio.bio
						+svg-heading("About me", "icon-about_header")
						.bio__main-image
							img(src="/assets/img/iam.jpg", alt="Денис Архипенко", title="Личный сайт веб разработчика")
						h3.bio__heading.sidestripes About me
						.bio__about
							p.
								I am developer. 29 years old. I am developing a modern sites and applications. I like to do interesting and modern projects.

					.about-me__skills.skills
						h3.skills__heading.sidestripes Technology stack
						.skills__descr
							p.
								More than 3 years expirience in frontend developing, also i can work with simple tasks on Backend.

						.skills__group
							.group__title Frontend
							+pie_chart("Java-Script",90)
							+pie_chart("Less & Sass",85)
							+pie_chart("Jade",75)
							+pie_chart("AngularJS",99)
						.skills__group
							.group__title Backend
							+pie_chart("NodeJS",60)
							+pie_chart("Entity Framework",50)
							+pie_chart("MSSQL",40)
							+pie_chart("WebApi",60)
						.skills__group
							.group__title Workflow
							+pie_chart("Gulp",90)
							+pie_chart("Git",90)
							+pie_chart("WebPAck",60)



		section.contacts.last-section.fullheight.fullheight_mih
			.contacts__map
				#map_wrapper
			.contacts__info
				.contacts__heading
					h3.sidestripes Contacts
				ul.contacts__links
					- var contact_item = { 'skype' : 'flysector', 'envelope': 'denys5dev@gmail.com', 'phone': '+38685838374', 'map-marker' : 'Kamenets-Podolsky' };
					each type, link_a in contact_item
						li.link-wrapper
							a.link(href="#")
								i(class= "fa fa-" + link_a)
								span=type

		include common/_footer
